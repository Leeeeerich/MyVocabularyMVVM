<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import
            alias="v"
            type="android.view.View" />

        <variable
            name="word"
            type="com.guralnya.myvocabulary.model.dto.DictionaryWord" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tvTranslatedWord"
        app:layout_constraintTop_toTopOf="@+id/tvTranslatedWord">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:paddingBottom="15dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </android.support.v4.view.ViewPager>

        <TextView
            android:id="@+id/tvTranslateWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:drawableStart="@drawable/ic_horn"
            android:gravity="center"
            android:text="@{word.wordName}"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPager"
            tools:text="word" />

        <TextView
            android:id="@+id/tvTranscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:drawableTint="#5c000000"
            android:gravity="center"
            android:text="@{@string/square_brackets(word.wordTranscription)}"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Secondary"
            android:visibility="@{word.wordTranscription.isEmpty() ? v.GONE : v.VISIBLE}"
            app:layout_constraintEnd_toEndOf="@+id/tvTranslateWord"
            app:layout_constraintStart_toStartOf="@+id/tvTranslateWord"
            app:layout_constraintTop_toBottomOf="@+id/tvTranslateWord"
            tools:text="[transcription]" />

        <TextView
            android:id="@+id/tvTranslatedWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@{word.wordTranslate}"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintEnd_toEndOf="@+id/tvTranscription"
            app:layout_constraintStart_toStartOf="@+id/tvTranscription"
            app:layout_constraintTop_toBottomOf="@+id/tvTranscription"
            tools:text="перевод" />

        <TextView
            android:id="@+id/tvOkay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:onClick="onClickClose"
            android:text="@android:string/ok"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTranslatedWord" />
    </android.support.constraint.ConstraintLayout>
</layout>
