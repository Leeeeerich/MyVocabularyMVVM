<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar.MyDialogAppCompat" parent="Theme.AppCompat.Dialog.Alert">
        <item name="dialogCornerRadius">10dp</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextAppearance.AppCompat.Large.Secondary">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

    <style name="Widget.AppCompat.Button.Colored.Green">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">#673ab7</item>
    </style>

    <style name="Widget.AppCompat.Button.Colored.Red">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlHighlight">#673ab7</item>
    </style>
</resources>
